<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.time.LocalDate?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.reminder.AddReminder"
            prefWidth="400" prefHeight="300">
    
    <VBox spacing="10" alignment="CENTER" layoutX="50" layoutY="50" prefWidth="300" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="30">
        <Label text="Tambah Reminder" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <TextField fx:id="txtJudul" promptText="Judul Reminder" maxWidth="250"/>
        
        <DatePicker fx:id="tanggalPicker" maxWidth="250"/>

        <TextArea fx:id="txtDeskripsi" promptText="Deskripsi (opsional)" maxWidth="250" prefRowCount="3"/>
        
        <Button text="Simpan" onAction="#handleSubmit" maxWidth="150"/>
    </VBox>
</AnchorPane>
